@model Arretadinhos.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Seller Registration";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Seller.Name" class="form-label mt-4"></label>
                    <input asp-for="Seller.Name" type="text" class="form-control" placeholder="Enter name">
                    <span asp-validation-for="Seller.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Seller.Email" class="form-label mt-4"></label>
                    <input asp-for="Seller.Email" type="email" class="form-control" placeholder="Enter email">
                    <span asp-validation-for="Seller.Email" class="text-danger"></span>
                    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label asp-for="Seller.BirthDate" class="form-label mt-4"></label>
                    <input asp-for="Seller.BirthDate" type="date" class="form-control">
                    <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Seller.BaseSalary" class="form-label mt-4"></label>
                    <input asp-for="Seller.BaseSalary" type="number" class="form-control" placeholder="Enter base salary">
                    <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Seller.DepartmentId" class="form-label mt-4"></label>
                    <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-select">
                    <span asp-validation-for="Seller.DepartmentId" class="text-danger"></span>
                    </select>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}